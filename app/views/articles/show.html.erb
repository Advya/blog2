<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<h2>Add Comment</h2>
<%= form_for([@article, @article.comments.build])  do |f| %>
    
    <p><%= f.label :body %><br/>
    <%= f.text_area :body %></p>

    <p><%= f.submit %></p>

<% end %>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
    <i><%= current_user.username %> said:</i>
    
    <i><%= comment.body %></i>
    <hr />
<% end %>
