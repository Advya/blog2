<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<%= form_for([@article, @article.comments.build])  do |f| %>
    <p><%= f.label :author %><br/>
    <%= f.text_field :author %></p>

    <p><%= f.label :body %><br/>
    <%= f.text_area :body %></p>

    <p><%= f.submit %></p>

<% end %>

<% @article.comments.each do |comment| %>
    <p>Author: <%= comment.author %></p>
    
    <p>Body: <%= comment.body %></p>
    <hr />
<% end %>
